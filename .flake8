[flake8]
ignore =
    W503,
    E203,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D106,
    D107,
    D200,
    D202,
    D205,
    D400,
    D401,
    F405,

exclude =
    *migrations*,
    # python related
    *.pyc,
    .git,
    __pycache__,
    */node_modules/*
    ./static/*
    ./sites/*
    ./config/default.py
    ./scripts_tools/*
    ./support-files/*
    ./upgrade.py
    ./iam/*

max-line-length=120
max-complexity=26
format=pylint
show_source=False
statistics=True
count=True
